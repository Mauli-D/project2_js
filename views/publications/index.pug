extends ../layouts/main.pug

block content
  .container
    header
      h1= title

    div
      table.table.table-striped
        thead
          tr
            th Name
            th Publication Year
            th Actions
        
        tbody
          each publication in publications
            tr
              td
                a(href=`/publications/${publication.id}`)= publication.name
              td= publication.year
              td
                a(href=`/publications/${publication.id}/edit`) 
                 button.btn.btn-outline-primary(type='button') Edit

                = "  "
                form.destroy(action="/publications/destroy", method="POST", onsubmit='return confirm("Are you sure? You want to delete this Publication?");')
                  input(type="hidden", name="id", value=publication.id)
                  button.btn.btn-outline-danger(type="submit", value="delete") Delete
                  

      a(href='/publications/new') New Publication
